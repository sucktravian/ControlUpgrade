<Window x:Class="ControlUpgrade.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        Height="250"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Windows Upgrade Control"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10" />
            <TextBlock Text="Version 1.0.0"
                       Margin="0,0,0,10" />
            <TextBlock Text="© 2025 Sucktravian"
                       Margin="0,0,0,10" />
            <TextBlock Text="Licensed under the GNU GPL v3.0"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10" />
            <TextBlock>
                <Hyperlink NavigateUri="https://www.gnu.org/licenses/gpl-3.0.html"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    View full license
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
