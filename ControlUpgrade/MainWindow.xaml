<Window x:Class="ControlUpgrade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Upgrade Control"
        Height="450"
        Width="420"
        Background="{DynamicResource WindowBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        FontSize="14"
        Icon="pack://application:,,,/Slogo.ico">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Windows Version + Theme Toggle in one row -->
        <Border Grid.Row="0"
                Margin="0,10,0,30"
                CornerRadius="6"
                Background="{DynamicResource WindowBackgroundBrush}"
                BorderBrush="{DynamicResource ForegroundBrush}"
                BorderThickness="1"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="versionTextBlock"
                           Text="Windows Version: "
                           FontWeight="Bold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           VerticalAlignment="Center" />

                <Button x:Name="themeToggleButton"
                        Style="{StaticResource NoHoverHighlightButton}"
                        Grid.Column="1"
                        Content="☀️"
                        FontSize="16"
                        Width="32"
                        Height="32"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="{x:Null}"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Click="ThemeToggleButton_Click"
                        ToolTip="Toggle theme" />

                <Button x:Name="aboutButton"
                        Style="{StaticResource NoHoverHighlightButton}"
                        Grid.Column="2"
                        Content="ℹ️"
                        FontSize="16"
                        Width="32"
                        Height="32"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="{x:Null}"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Click="AboutButton_Click"
                        ToolTip="About this app" />
            </Grid>

        </Border>

        <!-- Upgrade Controls -->
        <GroupBox x:Name="upgradeGroupBox"
                  Header="Upgrade Control"
                  FontWeight="SemiBold"
                  Margin="0,78,0,5"
                  Grid.RowSpan="2"
                  Foreground="{DynamicResource ForegroundBrush}">
            <TabControl Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        Foreground="Black">
                <TabItem Header="Upgrade Control"
                         Background="WhiteSmoke"
                         Foreground="Black">
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="{DynamicResource WindowBackgroundBrush}">
                        <Button x:Name="lockButton"
                                Content="🔒 Lock Upgrade"
                                Width="200"
                                Height="35"
                                Margin="0,0,0,10"
                                Background="#0078D7"
                                Foreground="White"
                                BorderBrush="#0078D7"
                                Click="LockUpgrade_Click" />
                        <Button x:Name="unlockButton"
                                Content="🔓 Unlock Upgrade"
                                Width="200"
                                Height="35"
                                Background="#E81123"
                                Foreground="White"
                                BorderBrush="#E81123"
                                Click="UnlockUpgrade_Click" />
                    </StackPanel>
                </TabItem>
                <TabItem x:Name="registryTab"
                         Header="Registry Info"
                         Background="WhiteSmoke"
                         Foreground="Black">
                    <StackPanel Margin="10"
                                Background="{DynamicResource WindowBackgroundBrush}">
                        <TextBlock x:Name="registryKeyLabel"
                                   Text="Registry Key Values:"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"
                                   Foreground="{DynamicResource ForegroundBrush}" />
                        <TextBox x:Name="registryInfoTextBox"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="80"
                                 Background="{DynamicResource ButtonBackgroundBrush}"
                                 Foreground="{DynamicResource ButtonForegroundBrush}" />

                        <Button x:Name="openRegistryEditorButton"
                                Content="📂 Open in Registry Editor"
                                Width="220"
                                Height="35"
                                Margin="0,15,0,0"
                                Background="{DynamicResource ButtonBackgroundBrush}"
                                Foreground="{DynamicResource ButtonForegroundBrush}"
                                Click="OpenRegistryEditor_Click" />
                    </StackPanel>
                </TabItem>
            </TabControl>
        </GroupBox>

        <StatusBar Grid.Row="2"
                   Background="{DynamicResource StatusBarBackgroundBrush}"
                   Height="25">
            <StatusBarItem>
                <TextBlock x:Name="statusLabel"
                           Text="Checking status..."
                           Foreground="{DynamicResource ForegroundBrush}">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="1.0"
                                                     To="0.3"
                                                     Duration="0:0:1"
                                                     AutoReverse="True" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
