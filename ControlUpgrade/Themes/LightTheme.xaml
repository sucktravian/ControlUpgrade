<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#222222"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#000000"/>

    <!-- Add StatusBar Background for Light theme -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#e1e1e1"/>
</ResourceDictionary>
