<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="White"/>

    <!-- Add StatusBar Background for Dark theme -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#333333"/>
</ResourceDictionary>
